@model SideProject.Models.AddImage

<h1>Add User</h1>

<form method="post" action="/User/Add">

    <div class="mt-3">
        <label class="form-label">File format</label>
        <input type="text" class="form-control" asp-for="fileFormat" />
    </div>

    <div class="mt-3">
        <label class="form-label">Image</label>
        <input type="image" class="form-control" asp-for="image" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Upload</button>
    </div>
</form>