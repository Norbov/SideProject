@{
}
@model List<SideProject.Models.Entities.Image>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].fileFormat)
            </th>
            <th>
                Download
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <th>
                        @Html.DisplayFor(modelItem => image.Id)
                </th>
                <th>
                        @Html.DisplayFor(modelItem => image.fileFormat)
                </th>
                <th>
                        @if(image.image != null)
                        {
                            <form asp-page-handler="Download" method="post" asp-route-id="@image.Id">
                                <input type="submit" class="btn btn-dark" value="Download">
                            </form>
                        }
                </th>
            </tr>
        }
    </tbody>
</table>
